{
    "manifest_version": 3,
    "minimum_chrome_version": "88",
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; "
    },
    "name": "环球数科链助手",
    "description": "环球数科官方区块链插件，支持数字资产管理与链上应用",
    "version": "1.2.2",
    "action": {
        "default_icon": "img/hq.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "img/hq.png",
        "48": "img/hq.png",
        "128": "img/hq.png"
    },
    "externally_connectable": {
        "matches": [
            "http://localhost/*",
            "http://127.0.0.1/*",
            "http://192.168.0.71/*",
            "https://ide.chainmaker.org.cn/*"
        ],
        "ids": [
            "*"
        ]
    },
    "background": {
        "service_worker": "js/eventPage.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "js/contentScript.js"
            ],
            "run_at": "document_idle",
            "css": []
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "js/provider.js",
                "js/sdk.js",
                "popup.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "storage",
        "http://*/*",
        "https://*/*",
        "windows",
        "system.display"
    ],
    "host_permissions": ["<all_urls>"],
    "optional_permissions": ["<all_urls>"],
    "optional_host_permissions": ["<all_urls>"]
}
