{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/js",
    "rootDir": "src",
    "sourceMap": true,
    "target": "es5",
    "downlevelIteration": true,
    "strict": false,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@web-sdk/*": ["web-sdk/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@services/*": ["src/services/*"],
      "@popup/*": ["src/popup/*"],

    },
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}
